{
    "manifest_version": 2,

    "name": "Web Payments Mediator",
    "description": "This extension implements a Web Payments Mediator in your browser",
    "version": "1.0",

    "browser_action": {
        "default_icon": "dollar.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "storage"
    ],

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"]
        }
    ]
}
